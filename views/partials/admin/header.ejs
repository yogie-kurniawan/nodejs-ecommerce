<header class="header">
  <div class="top-header">
    <div class="container">
      <div class="left"></div>
      <div class="right"></div>
    </div>
  </div>
  <div class="bottom-header">
    <nav class="navbar">
      <div class="nav-center container">
        <div class="logo-container">
          <a href="/" class="logo">Logo</a>
        </div>
        <div class="menu-container open">
          <button class="close-btn"><i class="bx bx-x"></i></button>
          <ul class="menu-list">
            <li class="menu-item">
              <a href="/" class="menu-link active">Home</a>
            </li>
            <li class="menu-item">
              <a href="/products" class="menu-link">Products</a>
            </li>
            <li class="menu-item">
              <a href="#" class="menu-link">Categories</a>
            </li>
          </ul>
          <div class="menu-action">
            <div class="cart-container" class="cart-container">
              <a href="/cart" class="cart"><i class="bx bx-cart"></i></a>
            </div>
            <%if(locals.user) {%>
            <div class="profile-thumbnail">
              <a href="/profile" class="btn-sm btn-secondary"
                ><%= locals.user.username%></a
              >
            </div>
            <% } else { %>
            <div class="action-btn-container">
              <a href="/signin" class="btn-sm btn-secondary">Login</a>
            </div>
            <% } %>
          </div>
        </div>
        <button class="toggle-btn">
          <i class="bx bx-menu"></i>
        </button>
      </div>
    </nav>
  </div>
</header>
